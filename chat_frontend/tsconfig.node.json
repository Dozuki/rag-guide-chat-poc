{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "target": "ES2020",
    "lib": ["ES2020"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "resolveJsonModule": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "./.tsbuild/node"
  },
  "include": ["vite.config.ts"]
}
